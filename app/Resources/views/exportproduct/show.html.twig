{% extends 'base.html.twig' %}

{% block body %}
    <h1>Exportproduct</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exportProduct.id }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if exportProduct.createdAt %}{{ exportProduct.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ exportProduct.file }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('exportproducts_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('exportproducts_edit', { 'id': exportProduct.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
